<h1>
  <strong>Books</strong>
</h1>

<table>
  <thead>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td></td>
    </tr>
　　<% end%>
  </tbody>
</table>




<h2>New book</h2>

<%= form_with model:@book, url:'/books', method: :post do |f| %>
  <lavel for="book_title">Title</label>
  <%= f.text_field:title %>

  <lavel for= "book_body">Body</label>
  <%= f.text_area:body %>

  <%= f.submit "Create Book" %>

<% end %>



