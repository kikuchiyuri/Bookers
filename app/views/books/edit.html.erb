<h1>Editing Book</h1>

<%= form_with model:@book, url: books_path(@book), method: :patch do |f| %>

  <label for="book_title">Title</label>
  <%= f.text_field:title %>

  <label for="book_body">Body</label>
  <%= f.text_area:body %>

  <%= f.submit'Update Book' %>

<% end%>

<%= link_to "Show", book_path(@book.id) %>
<span>|</span>
<%= link_to "Back", '/books' %>
